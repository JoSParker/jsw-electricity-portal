{
  "build": {
    "base": "",
    "command": "npm ci && npm run build -- --configuration production",
    "publish": "dist/jsw",
    "environment": {
      "NODE_VERSION": "20",
      "NPM_VERSION": "10",
      "NPM_FLAGS": "--no-optional"
    },
    "ignore": "git diff --quiet $CACHED_COMMIT_REF $COMMIT_REF -- . ':(exclude)netlify.toml'"
  },
  "plugins": [
    {
      "package": "@netlify/plugin-sitemap",
      "inputs": {
        "buildDir": "dist/jsw",
        "exclude": [
          "**/404*",
          "**/admin/**"
        ]
      }
    }
  ]
}
