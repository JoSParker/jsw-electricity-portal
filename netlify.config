# Netlify configuration 
# This file ensures proper build and deploy settings

[build]
base = ""
publish = "dist/jsw"
command = "npm ci && npm run build -- --configuration production"

# Redirect for SPA
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
  force = true

# Add headers for security and performance
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
